<div class="container">
	<%= link_to "Back", :back %>
	<p>
		<h3>
			Fill the form to add your hotel
		</h3>
	</p>

	<%= form_for @hotel, :html => { :multipart => true } do |f| %>
  	<%= render 'errors'  %>
	<%= f.label :image %>
	<%= f.file_field :image %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :room_description %>
    <%= f.text_area(:room_description, rows: 7, maxlength:1500) %>
    <%= f.label :price_for_room %>
    <div class="input-prepend">
        <span class="add-on">
          $
        </span>
        <%= f.text_field :price_for_room, :class=>"input-mini"%>
    </div>
	<div class="breakfast" >
  		<p>Breakfast_included?</p>
  		<%= f.label(:breakfast_included, "Yes", :class=>"radio") %>
  		<%= f.radio_button(:breakfast_included, "yes") %>
  		<%= f.label(:breakfast_included, "No", :class=>"radio") %>
  		<%= f.radio_button(:breakfast_included, "no") %>
	</div>
 	<h4>Addresses:</h4>
 	<%= render "adresses" , f: f%>
 	<%= f.submit "Create new hotel", :class=>"btn btn-large btn-primary"%>
	<% end %>
</div>
