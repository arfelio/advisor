<p>Rate this hotel</p>
<%= form_for @rating do |f| %>
<%= f.select(:rating, options_for_select([['1 star', 1], ['2 stars', 2],
["3 stars", 3],['4 stars',4], ['5 stars',5]])) %>
<%= f.hidden_field :hotel_id, :value => @hotel.id %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.submit 'rate' %>
<% end %>